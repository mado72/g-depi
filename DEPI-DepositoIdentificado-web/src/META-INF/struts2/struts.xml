<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
	<!--
		Include da configuração padrão da framework BSAD para o Struts2.
	 -->
	<include file="META-INF/bsad/struts2/struts-config.xml" />
	
	<package name="depi-default" abstract="true" extends="bsad-default">
		
		<interceptors>
			<interceptor name="limparDados" class="br.com.bradseg.depi.depositoidentificado.util.LimparDadosFormularioStrutsInterceptor"/>
		</interceptors>
	
		<default-action-ref name="index"></default-action-ref>

		<global-results>
			<result name="error">
			    <param name="location">/WEB-INF/pages/layout/erro.jsp</param>
			</result>
		</global-results>

	</package>
	
	<package name="root" namespace="/" extends="depi-default">
	
		<action name="index" class="indexAction">
			<result name="success">
			    <param name="location">/WEB-INF/pages/layout/vazio.jsp</param>
			</result>
		</action>

		<action name="menu" class="menuAction" method="menu">
			<result name="success">
			    <param name="location">/WEB-INF/pages/layout/menu.jsp</param>
			</result>
			<result name="error">
			    <param name="location">/WEB-INF/pages/layout/erro.jsp</param>
			</result>
        </action>

		<action name="ConsultarDepartamento" class="consultarDepartamentoAction" 
			method="menu">
			<result name="success">
			    <param name="location">/WEB-INF/pages/pt_BR/includes/cadastro/ConsultarDepartamento.jsp</param>
			</result>
			<result name="error">
			    <param name="location">/WEB-INF/pages/layout/erro.jsp</param>
			</result>
        </action>
<!-- 
		<action name="/cadastro/Consultar*" class="consultar{1}Action" 
			method="menu">
			<result name="success">
			    <param name="location">/WEB-INF/pages/pt_BR/includes/cadastro/Consultar{1}.jsp</param>
			</result>
			<result name="error">
			    <param name="location">/WEB-INF/pages/layout/erro.jsp</param>
			</result>
        </action>
 -->
        <action name="navegador">
            <result>/WEB-INF/pages/navegador.jsp</result>
        </action>        

<!--	<action name="sobre" class="VersaoAction" method="execute">
			<result>/WEB-INF/jsp/layout/versao.jsp</result>
		</action> -->
		
	</package>
	
	<package name="cadastroMotivoDeposito" namespace="/cadastro/motivoDeposito/consultar" extends="depi-default">
	
		<default-class-ref class="motivoDepositoConsultarAction"/>
		

		<action name="index" method="iniciarFormulario">
			<result name="success">
			    <param name="location">/WEB-INF/pages/pt_BR/cadastro/motivoDeposito/motivoDeposito.jsp</param>
			</result>
        </action>

		<action name="listar" method="execute">
			<result name="success">
			    <param name="location">/WEB-INF/pages/pt_BR/cadastro/motivoDeposito/motivoDeposito.jsp</param>
			</result>
        </action>
        
		<action name="*" method="{1}">
			<result name="input">
			    <param name="location">/WEB-INF/pages/pt_BR/cadastro/motivoDeposito/motivoDeposito.jsp</param>
			</result>
			<result name="success" type="redirectAction">
			    <param name="actionName">listar</param>
			</result>
			<result name="incluirAcao" type="redirectAction">
			    <param name="actionName">novo</param>
			    <param name="namespace">/cadastro/motivoDeposito/editar</param>
			</result>
			<result name="alterarAcao" type="redirectAction">
			    <param name="actionName">alterar</param>
			    <param name="namespace">/cadastro/motivoDeposito/editar</param>
			</result>
        </action>

	</package>
	
	<package name="cadastroMotivoDepositoEditar" namespace="/cadastro/motivoDeposito/editar" extends="depi-default">
	
		<global-results>
			<result name="input">
			    <param name="location">/WEB-INF/pages/pt_BR/cadastro/motivoDeposito/motivoDepositoForm.jsp</param>
			</result>
			<result name="success" type="redirectAction">
			    <param name="actionName">listar</param>
			    <param name="namespace">/cadastro/motivoDeposito/consultar</param>
			</result>
		</global-results>
		
		<action name="novo" class="motivoDepositoEditarAction" method="novo">
			<interceptor-ref name="limparDados"/>
			<interceptor-ref name="applicationStack"/>
		</action>
        
        <action name="*" class="motivoDepositoEditarAction" method="{1}">
        </action>
        
	</package>
	
	<package name="cadastroDepartamentoConsultar" namespace="/cadastro/departamento/consultar" extends="depi-default">
	
		<default-class-ref class="departamentoConsultarAction"/>
		

		<action name="index" method="iniciarFormulario">
			<result name="success">
			    <param name="location">/WEB-INF/pages/pt_BR/cadastro/departamento/departamento.jsp</param>
			</result>
        </action>

		<action name="listar" method="execute">
			<result name="success">
			    <param name="location">/WEB-INF/pages/pt_BR/cadastro/departamento/departamento.jsp</param>
			</result>
        </action>
        
		<action name="*" method="{1}">
			<result name="input">
			    <param name="location">/WEB-INF/pages/pt_BR/cadastro/departamento/departamento.jsp</param>
			</result>
			<result name="success" type="redirectAction">
			    <param name="actionName">listar</param>
			</result>
			<result name="incluirAcao" type="redirectAction">
			    <param name="actionName">novo</param>
			    <param name="namespace">/cadastro/departamento/editar</param>
			</result>
			<result name="alterarAcao" type="redirectAction">
			    <param name="actionName">alterar</param>
			    <param name="namespace">/cadastro/departamento/editar</param>
			</result>
        </action>

	</package>
	
	<package name="cadastroDepartamentoEditar" namespace="/cadastro/departamento/editar" extends="depi-default">

		<global-results>
			<result name="input">
			    <param name="location">/WEB-INF/pages/pt_BR/cadastro/departamento/departamentoForm.jsp</param>
			</result>
			<result name="success" type="redirectAction">
			    <param name="actionName">listar</param>
			    <param name="namespace">/cadastro/departamento/consultar</param>
			</result>
		</global-results>

		<action name="novo" class="motivoDepositoEditarAction" method="novo">
			<interceptor-ref name="limparDados"/>
			<interceptor-ref name="applicationStack"/>
		</action>
        
        <action name="*" class="departamentoEditarAction" method="{1}">
        </action>
        
	</package>
	
</struts>