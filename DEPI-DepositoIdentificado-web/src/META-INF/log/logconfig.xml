<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<define name="applicationName" class="br.com.bradseg.bsad.framework.core.logging.utils.ApplicationPropertyDefiner" />
	<define name="targetPath" class="br.com.bradseg.bsad.framework.core.logging.utils.LogTargetPathPropertyDefiner" />
	
	<jmxConfigurator />
	
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${targetPath}/${applicationName}.log</file>
		<encoder>
			<pattern>%-40(%d{ISO8601} [%thread]) ${applicationName} %-5level %-60logger - %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${targetPath}/${applicationName}-%d{yyyy-MM-dd}.%i.log.zip</FileNamePattern>
			<TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<MaxFileSize>10MB</MaxFileSize>
			</TimeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
	</appender>

<!--
FIXME: NÃ£o deve estar habilitado para publicar no servidor. 
 -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%-40(%d{ISO8601} [%thread])
				${applicationName} %-5level %-60logger - %msg%n</pattern>
		</encoder>
	</appender>

 	<logger name="org.apache" level="INFO" />
	<logger name="com.opensymphony" level="DEBUG" />
	<logger name="com.opensymphony.xwork2.ognl.accessor.XWorkMapPropertyAccessor" level="INFO" />
	<logger name="com.opensymphony.xwork2.conversion.impl" level="INFO" />
	
	<logger name="org.springframework" level="DEBUG" />
	<logger name="org.springframework.core.io.support.PathMatchingResourcePatternResolver" level="ERROR" />
	<logger name="net.sf.jasperreports" level="DEBUG" />
	<logger name="br.com.bradseg.bsad.framework" level="INFO" />
	<logger name="br.com.bradseg.depi" level="DEBUG" />
	<logger name="br.com.bradseg.depi.depositoidentificado.cics.CicsExecutor" level="INFO" />
	<logger name="br.com.bradseg.depi.depositoidentificado.cics.BookConfiguration" level="INFO" />

	<root level="DEBUG">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
	</root>
	
